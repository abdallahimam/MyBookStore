@model ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="container">
   <div class="row">
      <div class="col-4">
      @if (ViewBag.isSuccess == true)
      {
         <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Success!</strong> Your password was changed successfully. <br />
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
         </div>
      }
         <h3 class="display-3 mb-4">Login</h3>
         <form method="post" asp-action="ChangePassword" asp-controller="Account">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mb-3">
               <label asp-for="CurrentPassword"></label>
               <input asp-for="CurrentPassword" class="form-control" />
               <span asp-validation-for="CurrentPassword" class="text-danger"></span>
            </div>
            <div class="mb-3">
               <label asp-for="NewPassword"></label>
               <input asp-for="NewPassword" class="form-control" />
               <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div><div class="mb-3">
               <label asp-for="ConfirmNewPassword"></label>
               <input asp-for="ConfirmNewPassword" class="form-control" />
               <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
            </div>
            <div class="mb-3">
               <input type="submit" value="Login" class="btn btn-primary form-control" />
            </div>
         </form>
      </div>
      <div class="col-8">
         <img src="~/images/abdo.jpg" class="img-fluid img-thumbnail rounded-circle" />
      </div>
   </div>
</div>